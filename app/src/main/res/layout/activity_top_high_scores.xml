<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lao.logicatabelahighscore.TopHighScores"
    android:background="#f7f8cf">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:text="CLOSE"
        android:background="@drawable/colorbuttonorange"
        android:textColor="@android:color/white"
        android:id="@+id/idBtnCloseTopHighScore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButtonClose"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXXXXXXXXXXX"
        android:id="@+id/idTxtTopName"
        android:textColor="#0000aa"
        android:gravity="start"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="999"
        android:id="@+id/idTxtTopHS"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:enabled="true"
        android:layout_alignTop="@+id/idTxtTopName"
        android:layout_toLeftOf="@+id/idTxtTopName"
        android:layout_toStartOf="@+id/idTxtTopName"
        android:textColor="#ff0000"
        android:gravity="end" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="JAN17"
        android:id="@+id/idTxtTopDate"
        android:layout_alignTop="@+id/idTxtTopName"
        android:layout_toRightOf="@+id/idTxtTopName"
        android:layout_toEndOf="@+id/idTxtTopName"
        android:textColor="#d700e7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TOP 10 HIGH SCORES"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#ffae00" />

</RelativeLayout>
